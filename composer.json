{
  "name": "lasalle/mvc-intro",
  "description": "An introduction to the MVC pattern in PHP",
  "type": "project",
  "license": "MIT License",
  "require": {
    "nikic/fast-route": "^1.3",
    "twig/twig": "^3.0",
    "slim/slim": "4.*",
    "slim/psr7": "^1.0",
    "php-di/slim-bridge": "^3.0",
    "slim/twig-view": "^3.0",
    "ext-pdo": "*",
    "symfony/dotenv": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.4"
  },
  "autoload": {
    "psr-4": {
      "SallePW\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml --testdox",
    "test:coverage": "XDEBUG_MODE=coverage phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
  }
}
